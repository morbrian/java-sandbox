<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <description>X509Filter</description>
        <display-name>X509Filter</display-name>
        <filter-name>X509Filter</filter-name>
        <filter-class>morbrian.j2eesandbox.requestdump.filter.X509Filter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>X509Filter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>


    <servlet>
        <servlet-name>SimpleRequestInspectorServlet</servlet-name>
        <servlet-class>morbrian.j2eesandbox.requestdump.SimpleRequestInspectorServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimpleRequestInspectorServlet</servlet-name>
        <url-pattern>/inspect</url-pattern>
    </servlet-mapping>



</web-app>
